{
  "name": "react-online-shop",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-scripts": "2.1.5"
  },
  "scripts": {
    "build:css": "postcss src/styles/tailwind.src.css -o src/styles/tailwind.css",
    "watch:css": "postcss src/styles/tailwind.src.css -o src/styles/tailwind.css -w",
    "start": "npm-run-all -p watch:css react-start",
    "react-start": "react-scripts start",
    "build": "npm-run-all -p build:css react-build",
    "react-build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "autoprefixer": "^9.4.7",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.1",
    "tailwindcss": "^0.7.4"
  }
}
